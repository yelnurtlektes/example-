/* Base styles (for mobile/small screens) */
body {
  font-family: Arial, sans-serif;
  background-color: #f0f0f0;
  margin: 0;
  padding: 10px;
}
div.content {
  background-color: #fff;
  padding: 15px;
  margin: 10px 0;
}
img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 0 auto;
}

/* First media query: for small tablets and up */
@media screen and (min-width: 480px) {
  body {
    font-size: 16px;
  }
  div.content {
    padding: 20px;
  }
}

/* Second media query: for tablets and small desktops */
@media screen and (min-width: 768px) {
  div.content {
    width: 80%;
    margin: 20px auto;
  }
}

/* Third media query: for larger desktops */
@media screen and (min-width: 1024px) {
  body {
    background-color: #e0e0e0;
  }
  div.content {
    width: 70%;
    padding: 25px;
  }
}

/* Fourth media query: for extra-large screens */
@media screen and (min-width: 1200px) {
  div.content {
    width: 60%;
    padding: 30px;
  }
}
