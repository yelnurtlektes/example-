/* --- Grid Class Styling --- */
/* Use a two-column grid where each column is approximately 40% wide */
.grid {
  display: grid;
  grid-template-columns: 40% 40%;
  justify-content: center; /* Center the grid within its container */
  align-items: start;
  row-gap: 20px;
  column-gap: 20px;
}

/* Descendant selector: style only images inside the .grid class to have width 100% */
.grid img {
  width: 100%;
}

/* --- Flex Class Styling --- */
/* Use flexbox for the flex class and adjust flex-wrap and justify-content */
.flex {
  display: flex;
  flex-wrap: wrap;             /* Allow items to wrap onto multiple lines */
  justify-content: space-around; /* Adjust spacing between items */
  align-items: center;
  gap: 20px;                   /* Add a gap between flex items */
}

