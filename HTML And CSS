/* --- Skip Link Styling --- */
.skip-link {
  position: absolute;
  top: -40px; /* Off-screen initially */
  left: 0;
  background: #000;
  color: #fff;
  padding: 8px;
  text-decoration: none;
  z-index: 100;
}

.skip-link:focus {
  top: 0; /* Bring link on-screen when focused (e.g., by keyboard navigation) */
}

/* --- Header Styling --- */
header {
  background-color: #f8f9fa;
  padding: 20px;
}

/* --- Nav Styling --- */
/* Change nav to inline-block and set width to about 80% */
nav {
  display: inline-block;
  width: 80%;
  background-color: #007bff;
  padding: 10px;
}

/* Descendant selector: style only the image inside nav to have width about 10% */
