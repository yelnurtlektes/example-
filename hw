  <style>
    /* Style for the preview container */
    #image {
      width: 400px;
      height: 300px;
      border: 1px solid #ccc;
      background-image: url('');
      background-size: cover;
      background-position: center;
      text-align: center;
      line-height: 300px;
      font-size: 20px;
      margin-bottom: 20px;
    }
    
    /* Style for the thumbnail images */
    .preview {
      width: 100px;
      height: 75px;
      cursor: pointer;
      margin: 5px;
      border: 1px solid #aaa;
      transition: transform 0.3s ease;
    }
    
    /* A simple hover effect on thumbnails */
    .preview:hover {
      transform: scale(1.1);
    }
  </style>
</head>
<body>
  <!-- The "display" div that shows the default text or preview image -->
  <div id="image">Hover over an image below to display here.</div>
  
  <!-- A gallery of thumbnail images -->
  <div id="gallery">
    <img class="preview" src="img1.jpg" alt="Image 1 Description" onmouseover="upDate(this)" onmouseout="undo()">
    <img class="preview" src="img2.jpg" alt="Image 2 Description" onmouseover="upDate(this)" onmouseout="undo()">
    <img class="preview" src="img3.jpg" alt="Image 3 Description" onmouseover="upDate(this)" onmouseout="undo()">
    <!-- Add additional images as desired -->
  </div>
  
  <!-- Link to your JavaScript file -->
  <script src="script.js"></script>
</body>
